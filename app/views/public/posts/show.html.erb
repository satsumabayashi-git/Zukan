<h1>投稿詳細</h1>

<div>
  <%= image_tag @post.get_image(500,200) %>

  <p>本文：<%= @post.body %></p>
  <p>日時：<%= @post.date %></p>
  <p>場所：<%= @post.place %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if current_user == @post.user %>
    <%= link_to "削除", post_path(@post.id), method: :delete %>
  <% end %>

  <div>
    <% if @post.bookmarked_by?(current_user) %>
      <p>
        <%= link_to post_bookmarks_path(@post), method: :delete do %>
          ♥<%= @post.bookmarks.count %> ブックマーク
        <% end %>
      </p>
    <% else %>
      <p>
        <%= link_to post_bookmarks_path(@post), method: :post do %>
          ♡<%= @post.bookmarks.count %> ブックマーク
        <% end %>
      </p>
    <% end %>
  </div>

  <div>
    <p>コメント件数：<%= @post.post_comments.count %></p>
    <% @post.post_comments.each do |post_comment| %>
      <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
      <%= post_comment.user.name %>
      <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
      <% if current_user == post_comment.user %>
        <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
      <% end %>
    <% end %>
  </div>
</div>
<br>
<hr>
<br>
<div>
  <p>
    投稿ユーザー画像：
    <%= link_to user_path(@post.user.id) do %>
      <%= image_tag @post.user.get_profile_image(100, 100) %>
    <% end %>
  </p>
  <p>
    ユーザーネーム：
    <%= link_to user_path(@post.user.id) do %>
      <%= @post.user.name %>
    <% end %>
  </p>
</div>
<br>
<hr>
<br>
<div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>


