<h2>プロフィール編集</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <h4>プロフィール画像</h4>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <h4>名前</h4>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <h4>自己紹介</h4>
  <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"自己紹介"%>
  <h4>好きな動物</h4>
  <%= f.text_field :favorite_animal, autofocus: true, id:"inputName", placeholder:"好きな動物"%>
  <%= f.submit "変更を保存" %>
<% end %>