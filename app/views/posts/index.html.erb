<h1>投稿一覧</h1>
<div>
  <table class="post-index">
    <thead>
      <tr>
        <th>ユーザー画像</th>
        <th>画像</th>
        <th>本文</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td>
        <%= link_to user_path(post.user.id) do %>
          <%= image_tag post.user.get_profile_image(40, 40) %>
        <% end %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(200,200) %>
          <% end %>
        </td>
        <td>
          <%= post.body %>
        </td>
      </tr>
      <% end %> 
    </tbody>
  </table>
<div>